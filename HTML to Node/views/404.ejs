<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>404 — Aurora Studio</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="digits" id="digits"></div>

<div class="card hero-card" style="max-width:600px; text-align:center;">
  <h1 class="hero-title">404</h1>

  <p class="hero-desc">
    This page does not exist inside Aurora Studio’s cinematic environment.
  </p>

  <a href="/" class="btn">Return Home</a>
</div>

<script>
const cont = document.getElementById("digits");
const chars="0123456789";
for(let i=0;i<14;i++){
  const d=document.createElement("div");
  d.className="digit";
  d.textContent=chars[Math.floor(Math.random()*chars.length)];
  d.style.left=Math.random()*100+"vw";
  d.style.fontSize=(12+Math.random()*34)+"px";
  d.style.animationDelay=(Math.random()*6)+"s";
  cont.appendChild(d);
}
</script>

</body>
</html>
